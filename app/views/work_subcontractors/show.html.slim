javascript:
  function downloadImage() {
    var scaleBy = 5;
    var w = 2000;
    var h = 2000;
    var div = document.querySelector('#captcha');
    var canvas = document.createElement('canvas');
    canvas.width = w * scaleBy;
    canvas.height = h * scaleBy;
    canvas.style.width = w + 'px';
    canvas.style.height = h + 'px';
    var context = canvas.getContext('2d');
    context.scale(scaleBy, scaleBy);
    html2canvas(document.getElementById('captcha'), {
      canvas: canvas,
      onrendered: function(canvas) {
        theCanvas = canvas;
        document.body.appendChild(canvas);
        let wid = canvas.width * 0.78;
        let hgt = canvas.height * 0.78;
        let doc = new jsPDF('l','mm', [wid, hgt]);
        doc.addImage(theCanvas,'JPEG',3,3);
        let downloadName = '作業指示書(外注用)' + document.getElementById('project_name').innerHTML;
        doc.save(downloadName);
      }
    });
  }

