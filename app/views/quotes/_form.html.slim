= react_component :QuoteEditor,
{ action: action,
  quote: quote,
  quote_projects: quote.quote_projects,
  user_id: current_user.id,
  division_id: current_user.division.id,
  divisions: Division.all.where("(id = ?) OR (id = ?) OR (id = ?) OR (id = ?) OR (id = ?) OR (id = ?)", 1, 3, 5, 6, 7, 13).pluck(:name, :id),
  company_name: quote.persisted?? quote.client.company_division.company.name : '',
  company_division: quote.persisted?? quote.client.company_division : '',
  client_info: quote.persisted?? "#{ quote.client.company_division.company.name }\n#{ quote.client.company_division.name }\n#{ quote.client.name }" : '',
  client_name: quote.persisted?? quote.client.name : '',
  jii_address: SiteConfig.get_all[:jii_address],
  jii_tel: SiteConfig.get_all[:jii_tel],
  work: quote.work,
  task: quote.task,
  invoice: { id: quote&.invoice&.id, pdf_exist: quote&.invoice&.persisted? ? quote.invoice.file.attached? : false },
  delivery_note: { pdf_exist: quote&.delivery_note_pdf&.attached? },
  quotation: { pdf_exist: quote&.quotation_pdf&.attached? },
  activity: quote.activity,
}
