= react_component('QuoteEditor',
  { action: action,
    quote: quote,
    quote_projects: quote.quote_projects,
    user: quote.user,
    user_id: current_user.id,
    division_id: current_user.division&.id,
    home_division: quote.division,
    company: quote.client&.company_division&.company,
    division: quote.client&.company_division,
    client: quote.client,
    work: quote.work,
    task: quote.task,
    invoice: { id: quote&.invoice&.id, pdf_exist: quote&.invoice&.persisted? ? ActiveStorage::Attachment.find_by(record_type: :Invoice, record_id: quote.invoice.id).present? : false },
		delivery_note: { pdf_exist: ActiveStorage::Blob.find_by(filename: "納品書_#{quote&.id}.pdf").present? },
		quotation: { pdf_exist: ActiveStorage::Blob.find_by(filename: "見積書_#{quote&.id}.pdf").present? },
    activity: quote.activity,
  })
